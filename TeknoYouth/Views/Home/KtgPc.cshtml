@model IEnumerable<TeknoYouth.Models.Blog>

@{
    Layout = null;
}

@foreach (var item in Model.ToList().Where(x => x.KategoriID == 2).Take(3))
{


    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-success">@item.KategoriT.KategoriAD</strong>
            <h3 class="mb-0">@item.Baslik</h3>
            <div class="mb-1 text-muted">@item.tarih</div>
            <p class="card-text mb-auto">@item.İcerik.Substring(0, 150))...</p>
            <p class="lead mb-0 mt-2"><a href="/Home/BlogDetay/@item.id" class="text-white fw-bold btn btn-dark">İletişime Geç!</a></p>
        </div>
        <div class="col-auto d-none d-lg-block">
            <img src="@item.ResimURL" style="width:200px; height:250px;" />

        </div>
    </div>
}

