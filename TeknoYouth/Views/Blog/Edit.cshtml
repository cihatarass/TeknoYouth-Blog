@model TeknoYouth.Models.Blog

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Yazısını Düzenle</h2>
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal clearfix visible-md-block">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.Baslik, "Yazı Başlığı", htmlAttributes: new { @class = "control-label col-md-2 clearfix visible-md-block" })
            <div class="col-md-10 clearfix visible-md-block">
                @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KategoriID, "Kategori", htmlAttributes: new { @class = "control-label col-md-2 clearfix visible-md-block" })
            <div class="col-md-10 clearfix visible-md-block">
                @Html.DropDownList("KategoriID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KategoriID, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ResimURL, "Öne Çıkan Resim", htmlAttributes: new { @class = "control-label col-md-2 clearfix visible-md-block" })
            <div class="col-md-10 clearfix visible-md-block">
                <img src="@Model.ResimURL" width="500" height="150" class="img-rounded" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimURL, "Öne Çıkan Resim", htmlAttributes: new { @class = "control-label col-md-2 clearfix visible-md-block" })
            <div class="col-md-10 clearfix visible-md-block">
                <input type="file" name="ResimURL" accept=".jpg,.png,.jpeg" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.İcerik, "Yazı İçeriği", htmlAttributes: new { @class = "control-label col-md-2 clearfix visible-md-block" })
            <div class="col-md-10 clearfix visible-md-block">
                <textarea class="ckeditor" name="İcerik">@Model.İcerik</textarea>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 clearfix visible-md-block">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
