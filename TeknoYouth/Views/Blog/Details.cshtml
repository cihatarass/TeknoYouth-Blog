@model TeknoYouth.Models.Blog

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazı Detayı</h2>

<div>
    <hr />


    <div class="list-group">
        <div class="list-group-item">
            <p><strong>Başlık:</strong> @Html.DisplayFor(model => model.Baslik)</p>
        </div>
        <div class="list-group-item col">
            <p><strong>Kategori:</strong> @Html.DisplayFor(model => model.KategoriT.KategoriAD) </p>
        </div>
        <div class="list-group-item">
           <h4 class="list-group-item-heading list-group-item-info" style="text-align:center;">İçerik</h4>
        <p>@Html.Raw(Model.İcerik)</p>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Geri Dön", "Index")
</p>
